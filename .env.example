# Application Settings
APP_NAME=ShipTracker API
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=["http://localhost:3000","http://localhost:5173"]

# PostgreSQL Database
DATABASE_HOSTNAME=localhost
DATABASE_PORT=5432
DATABASE_NAME=shiptracker_dev
DATABASE_USERNAME=admin
DATABASE_PASSWORD=admin

# MongoDB Database
MONGO_HOSTNAME=localhost
MONGO_PORT=27017
MONGO_USERNAME=admin
MONGO_PASSWORD=admin
MONGO_DATABASE=shiptracker_dev

# Redis Cache
REDIS_HOSTNAME=localhost
REDIS_PORT=6379
REDIS_PASSWORD=admin
REDIS_DB=0

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key for Cronjobs/Integrations
# Generate a strong random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
CRONJOB_API_KEY=your-cronjob-api-key-here-change-in-production

# S3/MinIO Settings (optional)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_NAME=shiptracker

# Email Settings (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@shiptracker.com
SMTP_FROM_NAME=ShipTracker

# SMS Settings (optional)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Carrier API Keys (optional)
CORREIOS_API_KEY=your-correios-api-key
FEDEX_API_KEY=your-fedex-api-key
DHL_API_KEY=your-dhl-api-key

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
